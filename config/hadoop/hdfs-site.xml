<!-- Put site-specific property overrides in this file. -->

<configuration>
  <!-- 名称节点数据存储目录 逗号分隔的列表，增加docker环境变量可配置 -->
  <property>
    <name>dfs.namenode.name.dir</name>
    <value>NN_DATA_DIRS</value>
  </property>
  
  <!-- 数据块大小 256M -->
  <property>
    <name>dfs.blocksize</name>
    <value>DN_BLOCK_SIZE</value>
  </property>
  
  <!-- 处理datanode rpc请求的线程数 -->
  <property>
    <name>dfs.namenode.handler.count  </name>
    <value>300</value>
  </property>

  <!-- Configurations for DataNode: -->
  <!-- 数据节点数据存储目录 逗号跟个的多个目录  -->
  <property>
    <name>dfs.datanode.data.dir</name>
    <value>DN_DATA_DIRS</value>
  </property>

  <property>
      <name>dfs.replication</name>
      <value>DN_REPL_COUNT</value>
  </property>

  <!-- 各种端口配置 -->
  <property>
    <name>dfs.datanode.address</name>
    <value>DN_HOST:18001</value>
  </property>

  <property>
    <name>dfs.datanode.http.address</name>
    <value>DN_HOST:18002</value>
  </property>

  <property>
    <name>dfs.datanode.https.address</name>
    <value>DN_HOST:18003</value>
  </property>

  <property>
    <name>dfs.datanode.ipc.address</name>
    <value>DN_HOST:18004</value>
  </property>

  <property>
    <name>dfs.namenode.http-address</name>
    <value>NN_HOST:18005</value>
  </property>

  <property>
    <name>dfs.namenode.https-address</name>
    <value>NN_HOST:8006</value>
  </property>

  <!-- secondary namenode -->
  <property>
    <name>dfs.http.address</name>
    <value>NN_HOST:18005</value>
  </property>

  <property>
      <name>fs.checkpoint.dir</name>
      <value>SNN_DIRS</value>
  </property>
   <property>
      <name>dfs.namenode.secondary.http-address</name>
      <value>SECONDARYN_HOST:18019</value>
  </property>
  
  <property>
    <name>dfs.webhdfs.enabled</name>
    <value>true</value>
  </property>

</configuration>
